@model ResetPasswordViewModel

@{

    Layout = null;
    <link rel="stylesheet" href="~/assets/sass/css/main.css" />

    <style>
      
            .login-btns button {
                background: linear-gradient(45deg, #040113da, #ff121e7c 100%);
                display: inline-block;
                font-size: 14px;
                padding: 17px 33px 15px;
                min-width: 149px;
                line-height: 1;
                text-align: center;
                font-weight: 700;
                border: none;
                text-transform: uppercase;
                color: #fff !important;
            }
    </style>
}
<main>
    <section id="login">

        <div class="container">
            <div class="row">
                <div class="col-12 col-lg-12 login-col">
                    <div class="login-card">
                        <form class="pt-3" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="login-form">
                                <input class="form-control form-control-lg" asp-for="NewPassword" placeholder="new password">
                            </div>
                            <div class="login-form">
                                <input class="form-control form-control-lg" asp-for="ConfirmPassword" placeholder="confirm password">
                            </div>
                            <div class="login-btns">
                                <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Submit</button>
                            </div>
                            
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </section>

</main>