@model ForgotPasswordViewModel

@{

    Layout = null;
    <link rel="stylesheet" href="~/assets/sass/css/main.css" />
    <style>
        .back-btn {
            text-align: center;
            margin-top: 20px;
        }

        .back {
            text-decoration: none;
            color: #fff;
        }
        .login-btns{
            text-align:center;
        }
        .login-btns button {
            display: inline-block;
            font-size: 14px;
            padding: 17px 33px 15px;
            min-width: 149px;
            line-height: 1;
            text-align: center;
            font-weight: 700;
            border: none;
            text-transform: uppercase;
            color: #fff !important;
            background: linear-gradient(190deg, #040113da, #ff121e9a 100%);
            transition: background 0.3s linear;
        }
    </style>
}
<main>
    <section id="login">

        <div class="container">
            <div class="row">
                <div class="col-12 col-lg-12 login-col">
                    <div class="login-card">
                        <form class="pt-3" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="login-form">
                                <input class="form-control form-control-lg" asp-for="Email" placeholder="Email">
                            </div>
                            <div class="login-btns">
                                <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">SEND</button>
                            </div>
                            <div class="back-btn">
                                <a class="back" asp-action="login" asp-controller="account">
                                    <i class="bi bi-arrow-left"></i>
                                    Go Back
                                </a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </section>

</main>