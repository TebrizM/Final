@model MemberProfileViewModel
@{

    int orderCounter = 0;

    Layout = null;
    <style>
        #myProfile {
            height: 911px !important;
        }


        thead {
            color: #fff;
        }

        tbody {
            color: #fff;
        }
    </style>

    <link rel="stylesheet" href="~/assets/sass/css/main.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
}

<main>
    <section id="myProfile">
        <div class="container">
            <div class="row breadcrumb-row">
                <div class="col-12 col-lg-12">
                    <div class="breadcrumb">
                        <div class="br-icon">
                            <i class="bi bi-headphones"></i>
                        </div>
                        <div class="br-title">
                            <h1>Account Details</h1>
                        </div>
                        <div class="br-subtitle acc-br">
                            <a asp-action="index" asp-controller="home">Home > <span>Orders</span></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-lg-12 myAccount-col">
                    <div class="myAccount-content">
                        <h3>Orders</h3>

                        <div class="col-12 col-lg-12">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Items count</th>
                                        <th>Phone </th>
                                        <th>Total</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.Orders)
                                    {

                                        orderCounter++;
                                        <tr data-toggle="collapse" data-target="#demo-@order.Id" class="accordion-toggle">
                                            <td>@orderCounter</td>
                                            <td>@order.OrderItems.Count</td>
                                            <td>@order.PhoneNumber</td>
                                            <td>@order.TotalPrice</td>
                                            <td>@order.CreatedAt.ToString("dd-MM-yyyy HH:mm")</td>
                                            <td>@order.Status</td>
                                        </tr>

                                    }
                                </tbody>
                            </table>


                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
</main>
