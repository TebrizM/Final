    <!-- Video Section -->
    <section id="video" style="background-image: url(./assets/media/main/video-overlay.png.webp);">
        <div class="container">
            <div class="row">
                <video autoplay loop muted plays-inline>
                    <source src="~/assets/media/videoSection/@Model.Settings["VideoSection"]">
                </video>
            </div>
        </div>

    </section>


    <!-- Tours Section -->

    <section id="tours">
        <div class="container">
            <div class="row">
                <div class="col-12 col-lg-8">
                    <div class="tours-title">
                        <div class="sub-title">
                            <p>Upcoming Shows</p>
                        </div>
                        <h2>WHEN WE ALL FALL ASLEEP</h2>
                    </div>
                </div>
                <div class="col-12 col-lg-4">
                    <div class="tour-btn">
                        <button asp-action="index" asp-controller="tours">View ALL</button>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-lg-12">
                    <div class="tours-list">
                        <ul>
                            @foreach (var item in Model.Tours)
                            {
                                <li style="margin-top:0px;">
                                    <div class="tour-date">
                                        <h2>@item.Date.ToString("dd")</h2>
                                        <span>@item.Date.ToString("MMM")</span>
                                    </div>
                                    <div class="tour-info">
                                        <p>

                                            @item.Info
                                        </p>
                                        <span>

                                            @item.Desc
                                        </span>
                                    </div>
                                    <div class="tour-location">
                                        <p>
                                            <i class="bi bi-geo-alt-fill"></i>
                                            @item.Location

                                        </p>
                                    </div>
                                    <div class="tour-date">
                                        <p>
                                            <i class="bi bi-clock"></i>
                                            @item.Date.ToString("hh:ff")

                                        </p>
                                    </div>
                                   
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
