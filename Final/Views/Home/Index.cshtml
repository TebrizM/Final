@model HomeViewModel

@{ 
    <style>
        .viewMyplaylist{
            text-decoration:none;
        }
    </style>
}

    <section class="homeHero">
        <div class="container">
            <div class="slider">
                <ul class="one-time">
                    @foreach (var item in Model.Sliders)
                    {
                        <li>
                            <h4 class="slider-headtext">@item.Title1</h4>
                            <h1 class="slider-name">@item.Title2</h1>
                            <p class="slider-content">
                                @item.Desc
                            </p>
                            <button class="slider-btn">@item.BtnText</button>
                        </li>
                    }


                </ul>
                <div class="navigation d-flex justify-content-between">
                    <div class="prev-arrow"><i class="text-white fa-solid fa-angle-left"></i></div>
                    <div class="next-arrow"><i class="text-white fa-solid fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    
    </section>
    <section class="homeAbout">

        <div class="container">
            <div class="row  align-items-center">
                <div class="col-12 col-lg-6">
                    <div class="">
                        <img class="" src=" ./assets/media/about-section/@Model.Settings["AboutImg"]" alt="">

                    </div>
                </div>
                <div class="col-12 col-lg-6">
                    <div class="about-text">
                        <span>@Model.Settings["AboutTitle1"]</span>
                        <h2>@Model.Settings["AboutTitle2"]</h2>
                        <p>
                            @Model.Settings["AboutDesc"]
                        </p>
                        <a href="">@Model.Settings["AboutBtn"]</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Albums Section -->
    <section id="albums">
        <div class="container album-cont">
            <div class="row justify-content-between">
                <div class="col-12 col-lg-6 album-title">
                    <span>
                        Discover
                    </span>
                </div>
                <div class="col-12 col-lg-6 text-end album-button">
                    <a class="viewMyplaylist" asp-action="index" asp-controller="album">
                        View My Playlist
                    </a>
                </div>
            </div>
            <div class="row my-5">
                <h1>NEWEST ALBUMS & SINGLES</h1>
            </div>
            <div class="row my-5">
                @foreach (var item in Model.Albums)
                {
                    <div class="col-12 col-md-6 col-lg-3">
                        <div class="album-card text-center">
                            <div class="album-image">
                                <img src="~/uploads/albums/@item.Image" alt="">
                            </div>
                            <div class="album-title">
                                @item.Name
                            </div>
                            <div class="album-singer">
                               @item.Singer.Name
                            </div>
                        </div>
                    </div>

                }


            </div>
        </div>
    </section>

    <!-- Player Section -->
    <section id="players">
        <div class="container-fluid">
            <div class="row m-0">
                <div class="col-12 col-lg-6 p-0">
                    <div class="player_left">
                        <div class="player-left-inner">
                            <div class="row">
                                <div class="col-lg-5 col-sm-4">
                                    <div class="track-info-left">
                                        <h4>I'm Mess</h4>
                                        <p>Bebe Rexha</p>
                                    </div>
                                </div>
                                <div class="col-lg-7 col-sm-8 text-right">
                                    <div class="controls">

                                        <div class="track-btn prev-track">
                                            <i class="fa-solid fa-backward" id="back"></i>
                                        </div>
                                        <div class="track-play-btn">
                                            <i class="fa-solid fa-play" id="masterPlay"></i>
                                        </div>
                                        <div class="track-btn next-track">
                                            <i class="fa-solid fa-forward" id="next"></i>
                                        </div>
                                        <div class="track-btn">
                                            <i class="fa-solid fa-volume-high"></i>
                                        </div>
                                        <div class="track-timers">
                                            <span class="current-time" id="currentStart">00:00</span>
                                            /
                                            <span class="total-time" id="currentEnd">03:06</span>
                                        </div>


                                    </div>
                                    <div class="track-progress">

                                        <input class="progress" id="seek" type="range" min="1" max="100" value="0" 
                                        >

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
