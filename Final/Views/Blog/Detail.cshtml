@model BlogDetailViewModel


<style>
    textarea {
        margin-bottom: 60px;
    }
    .sbmnt-btn {
        margin-bottom: 200px;
        display: inline-block;
        font-size: 14px;
        padding: 17px 33px 15px;
        min-width: 149px;
   
        line-height: 1;
        text-align: center;
        font-weight: 700;
        border: none;
        text-transform: uppercase;
        background: linear-gradient(45deg, #503aca 0%, #ea34ff 100%);
    }
        .sbmnt-btn button {
            color: #fff !important;
        }
</style>

<main>
    <section id="blog-detail">

        <div class="container">
            <div class="row breadcrumb-row">
                <div class="col-12 col-lg-12">
                    <div class="breadcrumb">
                        <div class="br-icon">
                            <i class="bi bi-headphones"></i>
                        </div>
                        <div class="br-title">
                            <h1>Blog</h1>
                        </div>
                        <div class="br-subtitle">
                            <a asp-action="index" asp-controller="home">Home > <span>Blog</span></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-lg-12">
                    <div class="blog-detail-header">
                        <h1>@Model.Blogs.Name</h1>
                    </div>
                    <div class="blog-detail-metas">
                        <p>by <span>Admin</span></p> |
                        <p>Aug15, 2022</p> |
                        <p>20 Comment</p>
                    </div>
                    <div class="blog-detail-image">
                        <img src="~/uploads/blogs/@Model.Blogs.Image" alt="">
                    </div>
                    <div class="blog-detail-info">
                        <p>@Model.Blogs.Desc</p>
                    
                        <blockquote>

                            <h4>@Model.Blogs.Quote</h4>
             
                        </blockquote>
                   
                   
                        <div class="author-card">
                            <div class="author-card-text">
                                <img class="author-img" src="~/assets/media/Blog/author.jpg.webp" alt="">
                                <h4>LENA MOLLEIN.</h4>
                                <p>@Model.Blogs.Quote</p>
                                <div class="author-socials">

                                </div>
                            </div>
                        </div>
                        <div class="comment-wrap">
                            <h2>Comments</h2>
                            @foreach (var item in Model.Blogs.BlogComments)
                            {
                                <div class="comment-list">
                                    <div class="comment-header">
                                        <h4>@item.AppUser.UserName</h4>
                                    </div>
                                    <div class="comment-body">
                                        <p>@item.Text</p>
                                    </div>
                                    <div class="comment-footer">
                                        <p>@item.CreatedAt.ToString("MMMM dd,yyyy")</p>
                                    </div>


                                </div>
                            }

                        </div>
                        <div class="comment-title">
                            <h2>LEAVE A COMMENT</h2>
                            @Html.Partial("_BlogComment", Model.BlogComments)

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</main>