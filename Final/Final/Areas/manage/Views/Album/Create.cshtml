@model Album
@{
    ViewData["Title"] = "Create";
}
<style>
    select option {
        background: rgba(0,0,0, -0.96) !important;
    }
</style>
<h1>Create</h1>

<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h1>Create</h1>
            <form asp-action="create" method="post" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group col-lg-12">
                        <label asp-for="Name">Name</label>
                        <input class="form-control" asp-for="Name" placeholder="Enter Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group col-lg-12">
                        <label asp-for="AlbumTracks">Tracks</label>
                        <input class="form-control" asp-for="AlbumTracks" placeholder="Enter Tracks">
                        <span class="text-danger" asp-validation-for="AlbumTracks"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-lg-4">
                        <label asp-for="GenreId">Genre</label>
                        <select class="form-control" asp-for="GenreId" asp-items="@new SelectList(ViewBag.Genres,nameof(Genre.Id),nameof(Genre.Name))">
                        </select>
                    </div>
                    <div class="form-group col-lg-4">
                        <label asp-for="SingerId">Singer</label>
                        <select class="form-control" asp-for="SingerId" asp-items="@new SelectList(ViewBag.Singers,nameof(Singer.Id),nameof(Singer.Name))">
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-lg-6">
                        <label asp-for="AlbumImage">ImageFile</label>
                        <input class="form-control" asp-for="AlbumImage" placeholder="Enter File">
                        <span class="text-danger" asp-validation-for="AlbumImage"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>