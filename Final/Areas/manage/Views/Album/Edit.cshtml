@model Album
<style>
    select option {
        background: rgba(0,0,0, -0.96) !important;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h1>Edit</h1>
            <form asp-action="edit" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="form-group col-6">
                        <label asp-for="Name">Name</label>
                        <input class="form-control" asp-for="Name" placeholder="Enter Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>     
                    <div class="form-group col-lg-12">
                        <label asp-for="Desc">Description</label>
                        <input class="form-control" asp-for="Desc" placeholder="Enter Description">
                        <span class="text-danger" asp-validation-for="Desc"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-3">
                        <label asp-for="SingerId">Singers</label>
                        <select class="form-control" asp-for="SingerId" asp-items="@new SelectList(ViewBag.Singers, nameof(Singer.Id), nameof(Singer.Name))"></select>
                    </div>
                    <div class="form-group col-3">
                        <label asp-for="GenreId">Genres</label>
                        <select class="form-control" asp-for="GenreId" asp-items="@new SelectList(ViewBag.Genres, nameof(Genre.Id), nameof(Genre.Name))"></select>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-10">
                        <label asp-for="AlbumImage">Image</label>
                        <input class="form-control" asp-for="AlbumImage" placeholder="Select Image">
                        <span class="text-danger" asp-validation-for="AlbumImage"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>