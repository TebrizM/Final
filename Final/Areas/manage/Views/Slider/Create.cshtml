@model Slider
@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h1>Create</h1>
            <form asp-action="create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Title1">Title1</label>
                    <input class="form-control" asp-for="Title1" placeholder="Enter Title1">
                    <span class="text-danger" asp-validation-for="Title1"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title2">Title2</label>
                    <input class="form-control" asp-for="Title2" placeholder="Enter Title2">
                    <span class="text-danger" asp-validation-for="Title2"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Desc">Description</label>
                    <input class="form-control" asp-for="Desc" placeholder="Enter Description">
                    <span class="text-danger" asp-validation-for="Desc"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BtnText">BtnText</label>
                    <input class="form-control" asp-for="BtnText" placeholder="Enter BtnText">
                    <span class="text-danger" asp-validation-for="BtnText"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BtnUrl">BtnUrl</label>
                    <input class="form-control" asp-for="BtnUrl" placeholder="Enter BtnUrl">
                    <span class="text-danger" asp-validation-for="BtnUrl"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Order">Order</label>
                    <input class="form-control" asp-for="Order" placeholder="Enter Order">
                    <span class="text-danger" asp-validation-for="Order"></span>
                </div>


                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
