@model Slider
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h1>Edit</h1>
            <form asp-action="edit" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Title1">Title-1</label>
                    <input class="form-control" asp-for="Title1" placeholder="Enter Title-1">
                    <span class="text-danger" asp-validation-for="Title1"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title2">Title-2</label>
                    <input class="form-control" asp-for="Title2" placeholder="Enter Title-2">
                    <span class="text-danger" asp-validation-for="Title2"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BtnText">Button-Text</label>
                    <input class="form-control" asp-for="BtnText" placeholder="Enter Button-Text">
                    <span class="text-danger" asp-validation-for="BtnText"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Order">Order</label>
                    <input class="form-control" asp-for="Order" placeholder="Enter Order">
                    <span class="text-danger" asp-validation-for="Order"></span>
                </div>
               

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>