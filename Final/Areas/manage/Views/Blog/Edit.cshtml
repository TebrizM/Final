@model Blog
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h1>Edit</h1>
            <form asp-action="edit" method="post" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group col-lg-12">
                        <label asp-for="Name">Name</label>
                        <input class="form-control" asp-for="Name" placeholder="Enter Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group col-lg-12">
                        <label asp-for="Desc">Desc</label>
                        <input class="form-control" asp-for="Desc" placeholder="Enter Desc">
                        <span class="text-danger" asp-validation-for="Desc"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CreatedAt">Date</label>
                    <input type="date" asp-for="CreatedAt" placeholder="Enter Date">
                    <span class="text-danger" asp-validation-for="CreatedAt"></span>
                </div>
                <div class="form-row">
                    <div class="form-group col-lg-4">
                        <label asp-for="TagIds">Tags</label>
                        <select class="form-control" asp-for="TagIds" asp-items="@new SelectList(ViewBag.Tags,nameof(Tags.Id),nameof(Tags.Name))">
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="BlogImage">ImageFile</label>
                        <input class="form-control" asp-for="BlogImage" placeholder="Enter File">
                        <span class="text-danger" asp-validation-for="BlogImage"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
